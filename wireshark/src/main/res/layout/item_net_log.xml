<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <TextView
    android:id="@+id/tv_item_url"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginTop="@dimen/vertical_margin"
    android:layout_marginEnd="10dp"
    android:textSize="14sp"
    app:layout_constraintEnd_toStartOf="@id/iv_item_right"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="https://api-kkkkkkkk.com?id=123445" />

  <TextView
    android:id="@+id/tv_item_content"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/iv_item_right"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_item_url"
    tools:text="POST" />

  <ImageView
    android:id="@+id/iv_item_right"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:src="@mipmap/icon_right"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/iv_select"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:id="@+id/iv_select"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:src="@drawable/selector_check"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/black"
    app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>